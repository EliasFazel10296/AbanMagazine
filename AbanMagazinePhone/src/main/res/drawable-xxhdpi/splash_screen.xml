<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@color/default_color" />

    <item
        android:gravity="center">

        <shape
            android:shape="oval">

            <gradient
                android:gradientRadius="43%"
                android:type="radial"
                android:startColor="@color/dark"
                android:centerColor="@color/dark_transparent"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/official_business_logo" />
    </item>

    <item
        android:height="58dp"
        android:width="169dp"
        android:bottom="51dp"
        android:gravity="bottom|center_horizontal" >
        <bitmap
            android:src="@drawable/official_website_logo" />
    </item>

</layer-list>