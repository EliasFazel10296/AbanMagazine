<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="470dp"
        android:gravity="center">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@color/dark"
                android:centerColor="@color/dark_transparent"
                android:endColor="@android:color/transparent" />
            <corners
                android:topLeftRadius="221dp"
                android:bottomLeftRadius="221dp"/>
        </shape>
    </item>

    <item
        android:width="470dp"
        android:gravity="center"
        android:left="0.57dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@android:color/transparent"
                android:centerColor="@color/default_color_transparent"
                android:endColor="@color/default_color" />
            <corners
                android:topLeftRadius="271dp"
                android:bottomLeftRadius="271dp"/>
        </shape>
    </item>

    <item
        android:width="459dp">
        <bitmap
            android:tint="@color/light"
            android:src="@drawable/index_foreground"/>
    </item>

</layer-list>