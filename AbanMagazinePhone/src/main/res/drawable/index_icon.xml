<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center">
        <shape
            android:shape="rectangle">
            <size
                android:width="15dp"
                android:height="20dp"/>
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@color/dark"
                android:centerColor="@color/dark_transparent"
                android:endColor="@android:color/transparent" />
            <corners
                android:topLeftRadius="51dp"
                android:bottomLeftRadius="51dp"/>
        </shape>
    </item>

    <item
        android:gravity="center"
        android:left="0.5dp">
        <shape
            android:shape="rectangle">
            <size
                android:width="15dp"
                android:height="20dp"/>
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@android:color/transparent"
                android:centerColor="@color/default_color_transparent"
                android:endColor="@color/default_color" />
            <corners
                android:topLeftRadius="51dp"
                android:bottomLeftRadius="51dp"/>
        </shape>
    </item>

</layer-list>