<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/temporaryBackground">
        <shape>
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="13dp"
                android:bottomRightRadius="13dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="579dp"
                android:startColor="@color/dark_transparent"
                android:centerColor="@color/dark_transparent_high"
                android:endColor="@color/dark_transparent_high"
                android:angle="270" />
        </shape>
    </item>

    <item
        android:id="@+id/temporaryForeground"
        android:top="0dp"
        android:bottom="3dp"
        android:start="0dp"
        android:end="0dp">
        <shape>
            <corners
                android:topLeftRadius="13dp"
                android:topRightRadius="13dp"
                android:bottomLeftRadius="13dp"
                android:bottomRightRadius="13dp"/>
            <solid
                android:color="@color/lighter"/>
        </shape>
    </item>

</layer-list>