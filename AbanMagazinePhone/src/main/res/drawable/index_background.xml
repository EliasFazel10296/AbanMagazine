<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="343dp"
        android:top="6dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@color/dark"
                android:centerColor="@color/dark_transparent"
                android:endColor="@android:color/transparent" />
            <corners
                android:topRightRadius="23dp"
                android:bottomRightRadius="23dp"
                android:topLeftRadius="11dp"
                android:bottomLeftRadius="11dp"/>
        </shape>
    </item>

    <item
        android:height="343dp"
        android:top="6dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:gradientRadius="50%"
                android:startColor="@color/default_color"
                android:centerColor="@color/default_color_transparent"
                android:endColor="@android:color/transparent" />
            <corners
                android:topRightRadius="23dp"
                android:bottomRightRadius="23dp"
                android:topLeftRadius="11dp"
                android:bottomLeftRadius="11dp"/>
        </shape>
    </item>

</layer-list>