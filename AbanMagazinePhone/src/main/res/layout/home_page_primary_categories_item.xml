<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="3dp"
    android:background="@android:color/transparent"

    apps:layout_constraintDimensionRatio="1:1">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/categoryFeaturedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        apps:shapeDrawable="@drawable/primary_categories_item_background"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/categoryNameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:gravity="center"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="21sp"
        android:textColor="@color/light"
        android:fontFamily="@font/persian_sans"
        android:shadowColor="@color/darker"
        android:shadowRadius="23" />

</androidx.constraintlayout.widget.ConstraintLayout>
