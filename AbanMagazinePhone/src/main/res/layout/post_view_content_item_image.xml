<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".PostsConfigurations.SinglePost.SinglePostUI.SinglePostView">

    <net.geeksempire.loadingspin.SpinKitView
        android:id="@+id/postImageLoading"
        android:layout_width="37dp"
        android:layout_height="37dp"

        apps:SpinKit_Style="Pulse"
        apps:SpinKit_Color="@color/default_color_game_transparent"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"

        android:layout_margin="19dp"
        android:scaleType="centerCrop"

        apps:shape="rounded"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/showFullScreen"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="7dp"
        android:elevation="0dp"
        android:contentDescription="@string/showFullScreen"
        android:visibility="invisible"

        apps:lottie_rawRes="@raw/full_screen_action_animation"
        apps:lottie_repeatCount="2"
        apps:lottie_repeatMode="restart"

        apps:layout_constraintTop_toTopOf="@id/postImage"
        apps:layout_constraintBottom_toBottomOf="@id/postImage"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <com.abanabsalan.aban.magazine.Utils.UI.Vertical.VerticalMaterialButton
        android:id="@+id/showFullScreenInformation"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:paddingVertical="7dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:textColor="@color/light"
        android:text="@string/showFullScreen"
        android:visibility="invisible"

        apps:cornerRadius="51dp"
        apps:backgroundTint="@color/default_color_transparent_high"
        apps:rippleColor="@color/default_color_game_light"
        apps:strokeWidth="1dp"
        apps:strokeColor="@color/light_transparent"

        apps:layout_constraintTop_toBottomOf="@id/showFullScreen"
        apps:layout_constraintStart_toStartOf="@id/showFullScreen"
        apps:layout_constraintEnd_toEndOf="@id/showFullScreen"/>

</androidx.constraintlayout.widget.ConstraintLayout>