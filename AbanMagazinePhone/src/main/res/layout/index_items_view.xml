<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="213dp"
    android:layout_height="360dp"
    android:background="@drawable/index_background"
    tools:context=".HomePageConfigurations.UI.HomePage">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/categoriesIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginBottom="1dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/categoriesText"
        android:tag="0"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/featuredPostsIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginVertical="1dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/featuredPostsText"
        android:tag="1"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toBottomOf="@id/categoriesIndex"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/productsShowcaseIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginVertical="1dp"
        android:paddingHorizontal="21dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/productsShowcaseText"
        android:tag="2"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toBottomOf="@id/featuredPostsIndex"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newestPostsIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginVertical="1dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/newestPostsText"
        android:tag="3"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toBottomOf="@id/productsShowcaseIndex"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recommendedPostsIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginVertical="1dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/forYouPostsText"
        android:tag="4"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toBottomOf="@id/newestPostsIndex"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/instagramStoriesIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingHorizontal="21dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="@string/instagramStoriesText"
        android:tag="5"

        apps:cornerRadius="51dp"
        apps:rippleColor="@color/light_pink"
        apps:backgroundTint="@color/default_color_game_dark"

        apps:layout_constraintTop_toBottomOf="@id/recommendedPostsIndex"/>

</androidx.constraintlayout.widget.ConstraintLayout>