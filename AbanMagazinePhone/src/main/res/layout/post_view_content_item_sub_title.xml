<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".PostsConfigurations.UI.PostView">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/postSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="57dp"
        android:paddingHorizontal="14dp"
        android:textSize="19sp"
        android:textColor="@color/darker"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:fontFamily="@font/persian_sans"

        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="@color/default_color_game_dark"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>