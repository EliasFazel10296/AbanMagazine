<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp"
                android:bottomLeftRadius="23dp"
                android:bottomRightRadius="23dp"/>
            <gradient
                android:type="linear"
                android:gradientRadius="500dp"
                android:startColor="@color/default_color_transparent_high"
                android:centerColor="@color/default_color"
                android:endColor="@color/default_color_transparent_high"
                android:angle="270" />
        </shape>
    </item>

    <item
        android:top="7dp"
        android:bottom="7dp"
        android:start="3dp"
        android:end="3dp">
        <shape>
            <corners
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp"
                android:bottomLeftRadius="23dp"
                android:bottomRightRadius="23dp"/>
            <solid
                android:color="@color/light"/>
        </shape>
    </item>

</layer-list>