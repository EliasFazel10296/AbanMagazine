<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="3dp"/>
            <gradient
                android:startColor="@color/default_color"
                android:centerColor="@color/default_color_transparent_twice"
                android:endColor="@color/default_color_transparent_high"
                android:angle="225" />
        </shape>
    </item>

    <item
        android:id="@+id/temporaryForeground"
        android:top="3dp"
        android:bottom="3dp"
        android:start="3dp"
        android:end="0dp">
        <shape>
            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="3dp"/>
            <solid android:color="@color/light"/>
        </shape>
    </item>

</layer-list>